{
  "kind": "collectionType",
  "collectionName": "leftorium_products",
  "info": {
    "singularName": "leftorium-product",
    "pluralName": "leftorium-products",
    "displayName": "LeftoriumProduct"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "slug": {
      "type": "uid",
      "targetField": "title"
    },
    "category": {
      "type": "enumeration",
      "enum": [
        "Kitchen Gear",
        "Office Supplies",
        "Workshop Tools",
        "Sports Equipment",
        "Lab Prototype",
        "AI"
      ]
    },
    "price": {
      "type": "string"
    },
    "short_description": {
      "type": "text"
    },
    "description": {
      "type": "richtext"
    },
    "features_old": {
      "type": "blocks"
    },
    "art_url": {
      "type": "string"
    },
    "art_media": {
      "type": "media",
      "multiple": true,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "is_real": {
      "type": "boolean",
      "default": false
    },
    "features": {
      "type": "json"
    },
    "rating_avg": {
      "type": "integer",
      "default": 0
    },
    "rating_count": {
      "type": "integer",
      "default": 0
    }
  }
}
